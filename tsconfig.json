{
  "compilerOptions": {
    "module": "commonjs",
    "target": "ES2018",
    "declaration": true,
    "sourceMap": true,
    "outDir": "dist",
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "listEmittedFiles": true,
    "listFiles": true,
    "watch": true
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules"]
}